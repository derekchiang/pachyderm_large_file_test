{
  "pipeline": {
    "name": "opus_copy"
  },
  "transform": {
    "image": "ubuntu:latest",
    "debug": true,
    "cmd": ["bash"],
    "stdin": [
      "set -euo pipefail",
      "for f in $(find /pfs/opus_tars/ -name '*.tar.gz'); do",
      "   echo \"Copying $f\"",
      "   echo \"... to /pfs/out/$(basename \"$f\")\"",
      "   cp \"$f\" \"/pfs/out/$(basename \"$f\")\"",
      "done"
    ]
  },
  "parallelism_spec": {
    "strategy": "CONSTANT",
    "constant": 4
  },
  "inputs": [
    {
      "repo": {
        "name": "opus_tars"
      },
      "glob": "/*",
      "lazy": true
    }
  ]
}
